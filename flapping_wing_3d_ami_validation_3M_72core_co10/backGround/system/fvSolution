FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
solvers
{

    p
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        tolerance       1e-11;
        relTol          0.1;
	minIter 	2;
    }

    pFinal
    {
        $p;
        relTol          0;
	minIter 	2;
    }

    pcorr
    {
        $p;
    }

    U
    {

        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-12;
        relTol          0.1;
	minIter 	2;
    }

    UFinal
    {
        $U;
        relTol          0;
	minIter 	2;
    }
}

PIMPLE
{
    //momentumPredictor   true;
    nOuterCorrectors    10;
    nCorrectors         3;
    nNonOrthogonalCorrectors 2;

    correctPhi          false; 

    ddtCorr             true;

    residualControl
    {
        U
        {
                tolerance  1e-12;
                relTol      0;
        }
        p
        {
                tolerance  1e-11;
                relTol      0;
        }
     }
}

